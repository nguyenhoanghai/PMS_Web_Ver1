    <script>
        $(document).ready(function () {

            if (navigator.userAgent.match(/Android/i)) {
                window.scrollTo(0, 0); // reset in case prev not scrolled
                var nPageH = $(document).height();
                var nViewH = window.outerHeight;
                if (nViewH > nPageH) {
                    nViewH -= 250;
                    $('BODY').css('height', nViewH + 'px');
                }
                window.scrollTo(0, 1);
            }


            $('select').formSelect(); 

        });
    </script>

</body>
