        function ReDrawFilterAndLengthBoxForGrid(table) {
            var filterDiv = $('<div class="input-field"></div>');
            var txtSearch = $('<input type="search" id="tbSearch"  />');
            txtSearch.keyup(function () { table.search(this.value).draw(); });
            filterDiv.append(txtSearch);
            filterDiv.append('<label for="tbSearch">Filter</label>');
            $('.dataTables_filter').empty().append(filterDiv);

            var lengthDiv = $('<div class="input-field"></div>');
            var select = $('.dataTables_length select')[0];
            select.setAttribute('Id', 'lengthSelect');
            select.style = "width:100px";
            lengthDiv.append(select);
            lengthDiv.append('<label for="lengthSelect">Show entries</label>');
            $('.dataTables_length').empty().append(lengthDiv);
            $('select').formSelect();
        }
    </script>

