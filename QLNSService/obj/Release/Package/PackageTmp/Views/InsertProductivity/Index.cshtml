@{
    ViewBag.Title = "LCDShow";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/ShowLCD/LCDcss.css" rel="stylesheet" /> 
@Html.Action("LCDNS_Partial", "Productivity")

<script src="~/Scripts/QLNS/InsertProductivity/InsertProductivity.js"></script>
<style>
    #btn-nhap{
        padding: 10px 50px;
    font-size: 25px;
    font-weight: bold;
    margin: 10px 0;
    margin-left: 35%;
    }
</style>
<button id="btn-nhap" data-toggle="modal" class="btn btn-primary" data-target="#popup_Education" title="Nhập Liệu Thông Tin Năng Suất">Nhập Năng Suất Cho Chuyền</button>

<div class="modal hide fade modal_2" id="popup_Education" data-backdrop="static" data-keyboard="false">
    <div class="modal-header">
        <button aria-hidden="true" data-dismiss="modal" cancel class="close" type="button">×</button>
        <h4 class="modal-title">Thông tin Năng Suất Chuyền</h4> 
    </div>
    <div class="modal-body form-inline">
        <div class="container-fluid">
            <div class="rows">
                <div class="col-left">
                    <input data-bind="value: Id" type="hidden" />
                    <label>Chọn Chuyền<span class="required">*</span></label>
                    <select id="line"></select>
                </div>
                <div class="col-right">
                    <label>Chọn Mã Hàng <span class="required">*</span></label><br />
                    <select id="product"> </select>
                </div>
            </div>
            <div class="rows row_color">
                <div class="col-left">
                    <label>Loại Sản Lượng <span class="required">*</span></label>
                    <select id="type">
                        <option value="22">Sản Lượng Thoát Chuyền</option>
                        <option value="20">Sản Lượng Kiểm Đạt</option>
                        <option value="6">Sản Lượng Lỗi</option>
                        <option value="8">Sản Lượng Bán Thành phẩm</option>
                    </select>
                </div>
                <div class="col-right">
                    <label>Loại Lỗi :</label>
                    <select disabled id="errorType"> </select>
                </div>
            </div>
            <div class="rows">
                <div class="col-left">
                    <label>Sản Lượng <span class="required">*</span></label>
                    <input type="text" class="number" value="0" id="quantity" />
                </div>
                <div class="col-right">
                    <label> Hình Thức</label>
                    <div class="radio-box">
                        <input type="radio" name="ht" value="true" checked /> SL Tăng.
                        <input type="radio" name="ht" value="false" /> SL Giảm.
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button cancel aria-hidden="true" data-dismiss="modal" class="btn">
            <div class="button-image image-close"></div>
            Đóng
        </button>
        <button save class="btn btn-primary">
            <div class="button-image image-save"></div>
            Lưu Lại
        </button>
    </div>
</div>
 