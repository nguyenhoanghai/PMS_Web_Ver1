<html class="no-js">
<!--<![endif]-->
<head runat="server">

    <meta charset="utf-8">
    <title>Quản lý năng suất 7.1</title>
    <meta name="description" content="">
    <meta name="author" content="gpro">
    <meta name="robots" content="noindex, nofollow">
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1.0">
    <link rel="shortcut icon" href="~/Content/img/favicon.ico">
    <link rel="apple-touch-icon" href="~/Content/img/icon57.png" sizes="57x57">
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/plugins_1.3.css" rel="stylesheet" />
    <link href="~/Content/main_1.3.css" rel="stylesheet" />
    <script src="~/Scripts/QLNS/jquery-1.10.2.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/QLNS/cookie.js"></script>
    <script src="~/Scripts/QLNS/Authenticate/Authenticate.js"></script>

</head>
<body>
    <div id="login-container" class="animation-expandOpen">
        <div class="login-title text-center">
            <h1>
                <i class="gi gi-flash"></i><strong>Quản lý năng suất</strong><br>
                <small>Vui lòng <strong>Đăng Nhập</strong> vào hệ thống</small>
            </h1>
        </div>
        <div class="block remove-margin">
            <div id="form1" class="form-horizontal form-bordered form-control-borderless">
                <div class="form-group">
                    <div class="col-xs-12">
                        <div class="input-group">
                            <span class="input-group-addon"></i></span>
                            <input type="text" id="txtUsername" name="login-user" class="form-control input-lg" runat="server" placeholder="Tên đăng nhập / Tài khoản">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-12">
                        <div class="input-group">
                            <span class="input-group-addon"></span>
                            <input type="password" id="txtPassword" name="login-password" runat="server" class="form-control input-lg" placeholder="Mật khẩu">
                        </div>
                    </div>
                </div>
                <div class="form-group form-actions">
                    <div class="col-xs-4">
                        <label class="switch switch-primary" data-toggle="tooltip" title="Lưu mật khẩu cho lần sau ?">
                            <input type="checkbox" id="cbRememberMe" name="login-remember-me" runat="server" checked>
                            <span></span>
                        </label>
                    </div>
                    <div class="col-xs-8 text-right">
                        <button id="btnLogin" class="btn btn-sm btn-primary" text="ĐĂNG NHẬP" /> ĐĂNG NHẬP
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-12">
                        <p class="text-center remove-margin"><label style="color: #e67e22;" runat="server" ID="lblMessage" ForeColor="OrangeRed" Text=""></label></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="loading" style="display:none">
        <img src="~/Content/MasterPage/Images/loading%20(1).gif" />
    </div>
    <style>
        #loading {
            z-index: 9999;
            position: fixed;
            padding: 20% 55% 25% 45%;
            background: rgba(220, 220, 220, 0.29);
        }
    </style>
</body>
</html>
